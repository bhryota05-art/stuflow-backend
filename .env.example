# .env file for StuFlow with SQLite in-memory database

# Flask Configuration
FLASK_ENV=development  # Use 'development' for local testing, 'production' for Render
SECRET_KEY=your_super_secure_secret_key_here_change_this

# Email Configuration (Optional but recommended for verification)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_specific_password  # NOT your regular Gmail password!
MAIL_DEFAULT_SENDER=noreply@stuflow.com

# No database variables needed! SQLite uses in-memory database
